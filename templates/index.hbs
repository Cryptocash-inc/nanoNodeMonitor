{{#if newNodeVersionAvailable}}
<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Heads up!</strong> A new Nano Node version
  <strong>{{newNodeVersionAvailable}}</strong> is available.
  <a href="https://github.com/nanocurrency/raiblocks/releases/latest" target="_blank">Download it here!</a>
</div>
{{/if}}

<div class="row">
  <div class="col">
    <h3>Node Account</h3>
    <ul class="list-group mb-4">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="mr-3 pl-2">Address</span>
        <a href="{{nanoNodeAccountUrl}}" target="_blank" class="truncate">{{nanoNodeAccount}}</a>
        <button id="copyAccount" class="btn btn-sm btn-link btn-clipboard" data-clipboard-text="{{nanoNodeAccount}}" title="Copy">
          <i class="fas fa-clipboard fa-lg"></i>
        </button>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <h3>Node Info</h3>
    <div class="card mb-4">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Version
          <span class="float-right-truncate">{{version}}</span>
        </li>
        <li class="list-group-item">
          Current Block
          <span class="float-right-truncate" title="{{formatNumber blockSync}} %">{{formatNumber currentBlock}}</span>
        </li>
        <li class="list-group-item">
          Unchecked Blocks
          <span class="float-right-truncate">{{formatNumber uncheckedBlocks}}</span>
        </li>
        <li class="list-group-item">
          Peers
          <span class="float-right-truncate">{{formatNumber numPeers}}</span>
        </li>
        <li class="list-group-item">
          Sync Status
          <span class="float-right-truncate">{{formatNumber blockSync}} %</span>
        </li>
      </ul>
    </div>
  </div>

  <div class="col-lg-4">
    <h3>Node Account Info</h3>
    <ul class="list-group mb-4">
      <li class="list-group-item">
        Balance
        <span class="float-right-truncate">{{formatNano accBalanceMnano}} {{currencySymbol}}</span>
      </li>
      <li class="list-group-item">
        Pending
        <span class="float-right-truncate">{{formatNano accPendingMnano 6}} {{currencySymbol}}</span>
      </li>
      <li class="list-group-item">
        Representative
        <span class="float-right-truncate">
           {{#if repAccount}}
           <a href="{{repAccountUrl}}" target="_blank">{{repAccount}}</a>
           {{else}} Account not opened {{/if}}
        </span>
      </li>
      <li class="list-group-item">
        Delegators
        <span class="float-right-truncate">{{formatNumber nodeNinja.delegators}}</span>
      </li>
      <li class="list-group-item">
        Voting Weight
        <span class="float-right-truncate">{{formatNano votingWeight 6}} {{currencySymbol}}</span>       
      </li>
    </ul>
  </div>

  <div class="col-lg-4">
    <h3>System Info</h3>
    <ul class="list-group mb-4">
      <li class="list-group-item">
        Host
        <span class="float-right-truncate">{{nanoNodeName}}</span>        
      </li>
      {{#if nodeUptime}}
      <li class="list-group-item">
        Node Uptime
        <span class="float-right-truncate">{{formatNumber nodeUptime}} %</span>
      </li>
      {{else if nodeNinja.uptime}}
      <li class="list-group-item">
        Node Uptime
        <span class="float-right-truncate">
          <a href="https://nanonode.ninja/account/{{nanoNodeAccount}}">{{formatNumber nodeNinja.uptime}} %</a>
        </span>
      </li>
      {{else}}
      <li class="list-group-item">
        Uptime
        <span class="float-right-truncate">{{systemUptime}}</span>
      </li>
      {{/if}}
      <li class="list-group-item">
        Load
        <span class="float-right-truncate">{{formatNumber systemLoad}}</span>
      </li>
      <li class="list-group-item">
        Memory Used
        <span class="float-right-truncate">{{formatNumber usedMem}} MB</span>
      </li>
      <li class="list-group-item">
        Memory Total
        <span class="float-right-truncate">{{formatNumber totalMem}} MB</span>
      </li>
    </ul>
  </div>
</div>